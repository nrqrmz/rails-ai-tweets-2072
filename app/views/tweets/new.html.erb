<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-6 p-4 bg-white shadow">
      <%= simple_form_for @tweet do |f| %>
        <%= f.input :long, required: true, label: "Copy and paste a long text here" %>
        <%= f.button :submit, 'Create tweet', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
